{
  "action": {
    "default_title": "Twitch Tools",
    "default_popup": "/popup/popup.html",
    "default_icon": {
      "150": "/img/icon.png"
    }
  },
  "permissions": ["cookies", "storage", "tabs"],
  "icons": {
    "150": "/img/icon.png"
  },
  "author": "Kappador",
  "homepage_url": "https://kappa.host",
  "name": "Twitch Tools",
  "version": "1.1",
  "manifest_version": 3,
  "description": "Boosts your twitch experience to the next level by providing you with a lot of useful features.",
  "devtools_page": "/devtools/devtools.html",
  "host_permissions": ["*://*/*"],
  "content_scripts": [
    { "all_frames": true, "matches": ["<all_urls>"], "js": ["foreground.js"] }
  ],
  "options_page": "/popup/popup.html"
}
